<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout01"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#fcfcfc" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:descendantFocusability="blocksDescendants"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/listfriends_tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:textColor="#000" />

        <TextView
            android:id="@+id/listfriends_tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/listfriends_tv_num"
            android:padding="7dp"
            android:textColor="#666" />

        <TextView
            android:id="@+id/listfriends_tv_muserid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/listfriends_tv_msg"
            android:padding="7dp"
            android:textColor="#666"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/listfriends_tv_mchannelid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/listfriends_tv_mchannelid"
            android:padding="7dp"
            android:textColor="#666"
            android:visibility="invisible" />
    </RelativeLayout>

</RelativeLayout>